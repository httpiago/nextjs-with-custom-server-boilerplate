{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
  },
  "files": [
    "server/main.ts",
    "server/start.ts",
  ],
  "exclude": [
    "node_modules",
    "client",
    "public",
    "out"
  ]
}
