{
  "//": "Configurações padrões que serão extendidas pelas pastas client e server",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules"
  ]
}
